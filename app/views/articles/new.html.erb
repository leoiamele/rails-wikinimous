<div class="container d-flex justify-content-center">
  <div class="mt-3">
    <h1>New Article</h1>
    <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title", class:"d-block" %>
      <%= f.text_field :title %>
    </div> 
    <div class="form-group">
      <%= f.label :content, "Content", class:"d-block" %>
      <%= f.text_area :content, size: "70x5" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Article", class:"mb-4 btn btn-dark" %>
    </div>
    <% end %>
    <%= link_to 'Back', articles_path %>
  </div>
</div>


